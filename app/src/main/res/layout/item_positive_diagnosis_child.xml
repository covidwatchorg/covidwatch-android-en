<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@drawable/shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_normal">

        <TextView
            android:id="@+id/symptoms_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            android:drawableStart="@drawable/next_step_bullet_point"
            android:drawablePadding="@dimen/padding_normal"
            tools:text="Symptom onset date: July 9, 2020" />

        <TextView
            android:id="@+id/infection_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            android:drawableStart="@drawable/next_step_bullet_point"
            android:drawablePadding="@dimen/padding_normal"
            tools:text="Possible infection date: July 14, 2020" />

        <TextView
            android:id="@+id/test_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            android:drawableStart="@drawable/next_step_bullet_point"
            android:drawablePadding="@dimen/padding_normal"
            tools:text="Test date: July 10, 2020" />

        <TextView
            android:id="@+id/btn_delete_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/padding_normal"
            android:text="@string/btn_delete_diagnosis"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:background="@drawable/down_shadow" />
</FrameLayout>